@page "/changePassword"
<h3>ChangePassword</h3>

<div class="container col-md-12">
    <div class="row">
        <EditForm Model="@Input" OnValidSubmit="@LoginCheck">
            <div class="form-group">
                <label class="col-md-6" for="IdentificationNumber">Identification number</label>
                <InputText id="identificationNumber" class="col-md-4" type="text" @bind-Value="Input.IdentificationNumber" />
            </div>
            <div class="form-group">
                <label class="col-md-6" for="password">Old password</label>
                <InputText id="password" class="col-md-4" type="password" @bind-Value="Input.OldPassword" />
            </div>
            <div class="form-group">
                <label class="col-md-6" for="password">New password</label>
                <InputText id="password" class="col-md-4" type="password" @bind-Value="Input.NewPassword" />
            </div>
            <div class="form-group">
                <label class="col-md-6" for="password">New password repeated</label>
                <InputText id="password" class="col-md-4" type="password" @bind-Value="Input.NewPasswordRepeated" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary ml-2">Check balance</button>
            </div>
        </EditForm>
    </div>
