        <div class="col-md-6" style="visibility: @BalanceComponentsVisibility">
            <label class="pt-2">Balance:</label><button class="btn btn-sm btn-link pt-1 ml-1" disabled>@Balance</button>
        </div>
    </div>*@
</div>